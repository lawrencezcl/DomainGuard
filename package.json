{
  "name": "domaalert-bot",
  "version": "1.0.0",
  "description": "DomaAlert Bot: Smarter Alerts & Automated Actions for Doma's DomainFi Ecosystem",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:frontend": "cd frontend && npm run build",
    "dev:frontend": "cd frontend && npm run dev",
    "migrate": "node src/database/migrate.js",
    "setup": "npm install && cd frontend && npm install",
    "docker:build": "docker build -t domaalert-bot .",
    "docker:run": "docker run -p 3000:3000 domaalert-bot"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "telegraf": "^4.14.0",
    "twit": "^2.2.11",
    "axios": "^1.5.0",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.10.0",
    "node-cron": "^3.0.2",
    "joi": "^17.9.2",
    "rate-limiter-flexible": "^2.4.1",
    "ws": "^8.14.2",
    "uuid": "^9.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "@types/node": "^20.5.9"
  },
  "keywords": [
    "doma",
    "domain",
    "alerts",
    "web3",
    "telegram",
    "twitter",
    "automation",
    "defi",
    "domainfi"
  ],
  "author": "DomaAlert Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}