# DomaAlert Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database
DB_PATH=./data/domaalert.db

# Doma Protocol Configuration
DOMA_TESTNET_RPC_URL=https://rpc.doma.testnet
DOMA_API_BASE_URL=https://api.doma.testnet
DOMA_EXPIRY_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
DOMA_TRADE_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345679
DOMA_OWNERSHIP_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345680
DOMA_PREAUTH_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345681
DOMA_NOTIFICATIONS_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345682

# Bot API Keys
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Security
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Alert Configuration
ALERT_CHECK_INTERVAL=2000
MAX_ALERTS_PER_USER_FREE=5
MAX_ALERTS_PER_USER_BASIC=20
MAX_ALERTS_PER_USER_PREMIUM=999999

# Subscription Pricing (in USDC)
BASIC_SUBSCRIPTION_PRICE=5
PREMIUM_SUBSCRIPTION_PRICE=20

# Auto-Action Limits
DEFAULT_MONTHLY_LIMIT=200
HIGH_VALUE_THRESHOLD=100

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/domaalert.log

# Frontend URL (for web dashboard)
FRONTEND_URL=http://localhost:3001

# Webhook URLs (for external integrations)
WEBHOOK_SECRET=your_webhook_secret_here